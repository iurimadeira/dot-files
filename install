echo "\n=============================="
echo "Installing vim and tmux..."
echo "==============================\n"

sudo apt-get -y -q install vim tmux silversearcher-ag zsh \
  build-essential libssl-dev libffi-dev python-dev \
  libdbus-1-dev libdbus-glib-1-dev libpq-dev inotify-tools \
  vim-gtk
  
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

mkdir -p ~/.vim/bundle
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim &> /dev/null
mkdir -p ~/.tmux/plugins
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm &> /dev/null

sudo kbdrate -r 2 -d 250

echo "\n=============================="
echo "Setting up dotfiles..."
echo "==============================\n"

sh update
sh install-airline-fonts
sh install-gnome-themes
sh install-asdf
