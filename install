echo "\n=============================="
echo "Installing vim and tmux..."
echo "==============================\n"

sudo apt-get remove vim vim-common vim-runtime vim-tiny
sudo apt-get install vim vim-full tmux silversearcher-ag zsh

mkdir -p ~/.vim/bundle
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
mkdir -p ~/.tmux/plugins
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

sudo kbdrate -r 2 -d 250

echo "\n=============================="
echo "Setting up dotfiles..."
echo "==============================\n"

sh update
sh install-airline-fonts
sh install-gnome-themes
